{
  "name": "@storybook/addon-webpack5-compiler-swc",
  "version": "1.0.4",
  "type": "module",
  "description": "Adds SWC as a Webpack5 compiler to Storybook",
  "keywords": [
    "storybook-addons",
    "webpack5",
    "swc"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/storybookjs/addon-webpack5-compiler-swc.git"
  },
  "scripts": {
    "build": "tsup",
    "format": "biome format ./src",
    "format:write": "pnpm format --write",
    "check": "biome check ./src",
    "check:apply": "pnpm check --apply",
    "check:apply-unsafe": "pnpm check --apply-unsafe",
    "check:ci": "biome ci ./src",
    "release": "auto shipit"
  },
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    },
    "./preset": "./dist/preset.cjs",
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "files": [
    "dist/**/*",
    "preset.js",
    "src/**/*",
    "README.md"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "storybook": {
    "displayName": "Addon Webpack5 Compiler SWC",
    "supportedFrameworks": [
      "react",
      "preact",
      "vue",
      "web-components",
      "html",
      "svelte"
    ]
  },
  "dependencies": {
    "@swc/core": "1.5.7",
    "swc-loader": "^0.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@storybook/manager": "^8.0.0-rc.3",
    "@storybook/preview": "8.0.0-rc.3",
    "@storybook/core-common": "8.0.0-rc.3",
    "@storybook/types": "8.0.0-rc.3",
    "auto": "^11.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0"
  },
  "engines": {
    "node": ">=18"
  },
  "author": "Storybook Bot <storybookbot@gmail.com>",
  "auto": {
    "plugins": [
      "npm"
    ]
  },
  "bundler": {
    "exportEntries": [
      "src/index.ts"
    ],
    "nodeEntries": [
      "src/preset.ts"
    ]
  }
}
